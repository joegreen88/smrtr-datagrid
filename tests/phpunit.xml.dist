<phpunit bootstrap="./bootstrap.php" colors="true">
    
    <testsuite name="smrtr-datagrid">
        <directory>./</directory>
    </testsuite>
    
    <filter>
        <whitelist>
            <directory suffix=".php">..</directory>
        </whitelist>
    </filter>
    
    <logging>
        <log type="coverage-clover" target="build/logs/clover.xml" />
    </logging>
    
</phpunit>
